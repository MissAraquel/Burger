{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. Create a button in index.handlebars
that will submit the user input into the database. --}}

<div class="col-md-12">
    <center>
        <div class="col-md-4">
            <h2>Select a burger to consume:</h2>
            <div>
                {{#each burgers}} {{#unless devoured}}
                <form action="burger/eat/{{id}}" method="POST">
                    <br>
                    <div class="input-group">
                        <li class="form-control">{{id}}. {{burger_name}}</li>
                        <span class="input-group-btn">
                            <button class="btn btn-success devour-button" type="submit">DEVOUR</button>
                        </span>
                    </div>
                </form>
                {{/unless}} {{/each}}
            </div>
        </div>
        <br>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h2>Burgers consumed:</h2>
            <div id="burgersEaten">
                <br>
                {{#each burgers}} {{#if this.devoured}}
                <div class="input-group">
                    <li class="form-control">{{this.id}}. {{this.burger.name}}</li>
                </div>
                {{/if}} {{/each}}
            </div>
        </div>
    </center>
</div>